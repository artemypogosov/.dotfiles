#!/bin/bash
# Wait until display 2 is connected
while ! xrandr | grep -q "HDMI-A-1 connected"; do
    sleep 1
done

# Set monitor positions and resolution
xrandr --output HDMI-A-0 --mode 2560x1440 --primary
xrandr --output HDMI-A-1 --mode 2560x1440 --right-of HDMI-A-0

# Apply wallpaper with Nitrogen
nitrogen --restore
